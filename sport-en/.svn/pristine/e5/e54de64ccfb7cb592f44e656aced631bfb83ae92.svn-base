<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title><@s.text name='page.deviceManagement.t1'/></title>
	<#include "../../commons/top.html">
</head>
<body>
	<#include "../../commons/head.html">
	<#include "../../commons/batteryBoard.html">
	<div class="bg-lightgray">
		<h2 class="tc pt10 pb10"><@s.text name='page.deviceManagement.b1'/></h2>
	</div>
	<div class="content pt30 pb30">
	    <table class="ui-table ui-table-border">
	        <thead>
	            <tr>
	                <th><@s.text name='page.deviceManagement.b2'/></th>
	                <th><@s.text name='page.deviceManagement.b3'/></th>
	                <th><@s.text name='page.deviceManagement.b4'/></th>
	                <th><@s.text name='page.deviceManagement.b5'/></th>
	                <th><@s.text name='page.deviceManagement.b6'/></th>
	            </tr>
	        </thead>
	        <tbody>
	        	<#if personWatchList??>
		            <#list personWatchList as personWatch>
		            	<#if personWatch??>
	                		<tr>
									<td class="bl"><@s.text name='deviceName'/></td>
			                        <td><img src="<@s.text name='static.file.path'/>/images/pic-product1.png" /></td>
		                       		<td>${(personWatch.watchId)!""}</td>
		                       		<td>${(personWatch.bindTime)!""}</td>
		                       		<td class="br"><a id="Unpair" href="<@s.text name='root.path'/>/user/device/unbind?watch.watchId=${personWatch.watchId}" onclick="return show_confirm(this);" ><@s.text name='page.deviceManagement.b9' /></a><br>
		                            </td>
	                		</tr>
	                	</#if>
	                </#list>
	            <#else>
	            	<tr>
				    	<td style="height:20px"></td>
				        <td style="height:20px"></td>
				        <td style="height:20px"></td>
				        <td style="height:20px"></td>
				        <td style="height:20px"></td>
		            </tr>
                </#if>
	        </tbody>         
	    </table>
	    <!--<a class="btn btn-red btn-large r mt10" id="dialog-link"><@s.text name='page.deviceManagement.b7'/></a>-->
	</div>    
	
	<!--浮动层;-->
	<div  id="dialog"  style="display:none;">
	     <p>No Firmware available</p>
	</div>
	<!--end浮动层-->
	<#include "../../commons/foot.html">
</body>

<script>
$(function(){
	$( "#dialog" ).dialog({
		autoOpen: false,
		modal: true
	});
	// Link to open the dialog
	$( "#dialog-link" ).click(function(event) {
		$( "#dialog" ).dialog( "open" );
	});
})

function show_confirm(){ 
		if (!confirm("Sure to Unpair?")){ 
			 return false;
		}else{
			return true;
		}
	} ;
</script>
</html>
