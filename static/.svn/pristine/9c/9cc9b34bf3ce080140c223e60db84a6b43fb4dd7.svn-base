.banner4box{ background:url(../images/banner4.jpg) no-repeat; height:303px;}
.banner5box{ background:url(../images/banner5.jpg) no-repeat; height:340px;}
.intro{ position:absolute;}
.intro h2{font-size:40px;line-height:40px;color:#ff5c00; font-weight:normal; margin-bottom:15px;}
