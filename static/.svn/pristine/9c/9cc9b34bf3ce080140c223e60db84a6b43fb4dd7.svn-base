@charset "utf-8";
/* CSS Document */

/*	登陆框*/
.loginbox{ 
	position:absolute;
	top:27px; 
	left:575px;
	padding:30px 50px 0 50px;;
	width:290px; 
	height:395px; 
	background:url(../images/login_bg.png) no-repeat;
}
.loginbox h2{ font-size:18px; font-family:"黑体", "微软雅黑", "宋体"; margin-bottom:25px;}
.loginbox p{ 
	margin-bottom:20px; 
	_padding:1px 0;
	/*ie bug 遮住最上面input框*/
}


/*登录--表单验证的提示图标*/
.tipbox{
	background:url(../images/bg_tipbox.gif) no-repeat;
	width:235px; 
	height:35px;
	line-height:35px; 
	padding-left:5px; 
	color:#F00;
	
	
}
.tipbox-pos,.tipbox-pos2{ position:absolute;  left:40px;}
.tipbox-pos{top:-37px;}
.tipbox-pos2{top:28px;}

.tipbox .error,.tipbox .correct{
	padding:2px 0 2px 23px;
}
.tipbox .error{	background:url(../images/no.gif)  no-repeat;}
.tipbox .correct{background:url(../images/yes.gif) no-repeat;}

/*注册框 bindwrapper和bindbox是绑定设备页面css， */
.regwrapper,.bindwrapper{
	background:#f0f0f0;
	padding: 1px 50px;
}
.regbox{
	background:#FFF;
	font-size:13px;
	padding: 20px 0 20px 40px;
}
.regbox h2{font-size:18px; font-family:"黑体", "微软雅黑", "宋体";  padding-left:70px; margin-bottom:15px;}

/*注册--表单验证的提示图标*/
.tipbox-reg-error,.tipbox-reg-correct{color:#F00;padding:2px 0 2px 23px; margin-left:5px; }
.tipbox-reg-error{background:url(../images/no.gif)  no-repeat; }
.tipbox-reg-correct{background:url(../images/yes.gif)  no-repeat;}

/*绑定设备界面*/
.bindbox{
	background:#FFF;
	font-size:13px;
	padding: 20px 0 0 40px;
}
.bindbox p
{
	margin-bottom:15px;
}
.bindbox h2{ font-size:22px; font-family:"微软雅黑", "黑体";color:#ff7900;margin-bottom:20px;}
.bindbox h3{ font-size:18px;margin-bottom:20px;}
.bindbox h3 span{
	background:url(../images/tip_confirm.gif) no-repeat;
	padding-left:70px;
	margin-left:270px;
	display:inline-block;
	height:60px;
	line-height:60px;
}



/*主页banner1*/
.banner1box,
.banner2box,
.banner2box_ext,
.banner3box,
.banner4box,
.banner5box{
	 position:relative;
	 font-size:14px;
	 color:#333;
	 line-height:26px;
}
