.banner1box p{font-size:30px;}
.banner1box p big{ font-size:78px;line-height:80px;}
.banner1box p i{ font-size:45px; margin:0 10px 0 5px;line-height:60px;}
.banner1box .t1{ position:absolute; top:20px; left:130px;}
.banner1box .t2{ position:absolute; top:80px; left:400px;}
.banner2box .intro{left:120px; top:65px;}
.banner2box_ext .intro{left:120px; top:65px;}
.banner3box .intro{right:90px; top:85px;}
.banner4box .intro{left:70px; top:45px;}
.banner5box .intro{left:170px; top:55px;}
.banner5box .btn-app{ display:block; height:57px; width:168px; -; bottom:65px; left:168px;}
/*legal*/
.legal{ padding:20px 30px 30px 30px;}
.legal p{
	text-align:justify;
	line-height:18px;
	margin:20px 0;
}
.legal h2{ 
	font-size:20px; 
	color:#ff7100;
	font-weight:bold;
	font-family:"微软雅黑", "宋体";
	text-align:center;
	margin-bottom:20px;
}
.legal h3,
.legal h4{
	font-size:16px;
	font-weight:bold;
	margin-bottom:20px;
}

