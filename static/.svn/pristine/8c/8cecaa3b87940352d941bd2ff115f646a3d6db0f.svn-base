.pager {
	clear:both;line-height: 17px;font-size: 11px;color: #3772AE;font-family: verdana, arial, helvetica, sans-serif; text-align:left;
}
.pager a, .pager span {
	display: inline-block;margin: 0 1px;padding: 0 4px;border: 1px solid #B2E7F1;
	cursor:pointer
}
.pager .current {
	border: 1px solid #02A9EC;background: #02A9EC;font-weight: bold;color: #FFFFFF;     
}
.pager .count {
	border: none;margin-top: 1px;font-size: 12px;
}



.pager .allcount {
	border: none;margin-top: 1px;font-size: 12px; font-family: Arial;
}
.pager .pagecount {
	border: none;margin-top: 1px;font-size: 12px; font-family: Arial 宋体;  
}

.pager .direct {
	font-size: 12px;font-weight: bold;
}
.pager a {
	text-decoration: none;color: #3772AE;
}
.pager a:hover { 
    border: 1px solid #02A9EC;
}

.pager_white {
	line-height: 17px;font-size: 11px;color: #3772AE;font-family: verdana, arial, helvetica, sans-serif;
}
.pager_white a, .pager_white span {
	display: inline-block;margin: 0 1px;color: #FFFFFF;padding: 0 4px;border: 1px solid #0072C3;
}
.pager_white .current {
	border: 1px solid #0072C3;background: #02A9EC;font-weight: bold;color: #FFFFFF;
}
.pager_white .count {
	border: none;margin-top: 1px;font-size: 12px;
}
.pager_white .direct {
	font-size: 12px;font-weight: bold;
}
.pager_white a {
	text-decoration: none;color: #3772AE;background: #ffffff;
}
.pager_white a:hover {
    border: 1px solid #43ABF6;
}

