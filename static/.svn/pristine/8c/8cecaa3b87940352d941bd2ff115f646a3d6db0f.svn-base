.pager_Gray .allcount {
	border: none;margin-top: 1px;font-size: 12px; font-family: Arial; display:none;
}
.pager_Gray .pagecount {
	border: none;margin-top: 1px;font-size: 12px; font-family: Arial 宋体;  display:none;
} 
.pager_Gray .pagedirect {
	border: none;margin-top: 1px;font-size: 12px; font-family: Arial 宋体;  display:none;
