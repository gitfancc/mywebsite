var df = "dd/MM/yyyy";
// 将yyyy-mm-dd格式转为dd-mm-yyyy
function dateCovert(curDate){
	var st = curDate;
    var a = st.split(" ");
    var b = a[0].split("-");
    return b[2]+"/"+b[1]+"/"+b[0];
}
//将dd/mm/yyyy格式转为yyyy-mm-dd
function dateCovert2(curDate){
	var st = curDate;
    var a = st.split(" ");
    var b = a[0].split("/");
    return b[2]+"-"+b[1]+"-"+b[0];
}
