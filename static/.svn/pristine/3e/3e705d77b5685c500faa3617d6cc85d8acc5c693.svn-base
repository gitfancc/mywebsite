    compareDate:function(startDate, endDate){
    	var sd = startDate;
    	var ed = endDate;
    	var s = sd.split("-");
    	var e = ed.split("-");
    	var ret = new Date(e[0],e[1],e[2]).getTime()- new Date(s[0],s[1],s[2]).getTime();
    	if (ret==(7*86400000)){
    		return 2;
    	}else if (ret>(7*86400000)){
    		return 3;
    	} else if(ret == 0){
    		return 1;
    	}else{
    		return 2;
    	}
    	return 0;
    },
