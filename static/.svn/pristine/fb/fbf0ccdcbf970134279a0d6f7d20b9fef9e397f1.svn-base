		return s+"%";
	}else if(2000000 <= steps && steps <= 3999999){
		var s = steps/3999999*100;
		return s+"%";
	}else if(4000000 <= steps && steps <= 7999999){
		var s = steps/7999999*100;
		return s+"%";
	}else if(8000000 <= steps && steps <= 15999999){
