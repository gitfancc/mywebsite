.d-section-b2 .right{position:absolute;bottom:0; right:35px;}
.d-section-b2-pc{ background:url(../images/d_pc_1.jpg) center center no-repeat #e8edf1;height:420px;}
.d-section-b2-pc h2{ padding:30px 0 0 150px;}

.d-section-b3{background:#e8edf1; height:394px;}
.d-section-b3 .left{position:absolute;bottom:0; left:0;}
.d-section-b3 .right{position:absolute;top:130px; right:20px;}
.d-section-b3-pc{ background:url(../images/d_pc_2.jpg) 170px 130px no-repeat #f1f4f6;height:390px;}
.d-section-b3-pc h2{ padding:50px 0 0 50px; font-size:25px;}
.d-section-b3-pc h3{ padding:120px 0 0 510px; font-size:40px; color:#000;}

.d-section-b4{background:#e8edf1; height:430px;}
.d-section-b4 .left{position:absolute;bottom:0; left:0;}
.d-section-b4 .right{position:absolute;top:25px; left:195px;}

.d-section-b4-pc{ background:url(../images/d_pc_3.jpg) 10px 90px no-repeat #e6ebef;height:380px;}
.d-section-b4-pc h2{ padding:20px 0 0 50px; font-size:40px;}

.d-section-b5{background:#e8edf1; height:302px;}
.d-section-b5 .left{
	position:absolute;
	top:90px;
	left:60px;
}
.d-section-b5 .right{position:absolute;bottom:0; right:25px;}

.d-section-b6{background:#e8edf1; height:305px;}
.d-section-b6 .left{position:absolute;top:0; left:41px;}
.d-section-b6 .right{position:absolute;top:75px; right:100px;}

.d-section-b7{background:#e8edf1; height:395px;}
.d-section-b7 .left{position:absolute;top:140px; left:120px;}
.d-section-b7 .right{position:absolute;top:0; right:0;}

.icon-oh{ color:red; padding-left:23px; background:url(../images/oh.gif) no-repeat; line-height:20px; height:20px;}
