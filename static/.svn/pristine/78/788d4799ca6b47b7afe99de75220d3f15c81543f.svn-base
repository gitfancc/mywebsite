@charset "utf-8";
/* CSS Document */
.index-wrapper{background:url(../images/bg.jpg) center 0 #516170 no-repeat; height:813px;}
.index-wrapper .button-play{position:absolute; left:320px; top:240px; width:180px; height:45px;}
.nav-pin{background:url(../images/nav-bg.jpg) repeat-x; height:34px; line-height:34px;}
.nav-pin ul{width:990px; margin:0 auto;}
.nav-pin ul li{float:left; margin:0 10px;}
.nav-pin ul li a{ color:#fff; font-size:14px; padding:10px 0;}
.nav-pin ul li a:hover{ color:#ccc;}

/*	登陆框*/
.loginbox{ 
	position:absolute;
	top:50px; 
	right:20px;
	width:290px; 
	height:395px;
	color:#fff; 
}
.loginbox h2{ font-size:18px;margin-bottom:25px;}
.loginbox p{ 
	margin-bottom:20px; 
	_padding:1px 0;
	/*ie bug 遮住最上面input框*/
}
.loginbox .ui-input{background:#7c888e; border:1px solid #515e64; color:#fff;}


/*登录--表单验证的提示图标*/
.tipbox{
	background:url(../images/bg_tipbox.gif) no-repeat;
	width:235px; 
	height:35px;
	line-height:35px; 
	padding-left:5px; 
	color:#F00;
	
	
}
.tipbox-pos,.tipbox-pos2{ position:absolute;  left:40px;}
.tipbox-pos{top:-37px;}
.tipbox-pos2{top:28px;}

.tipbox .error,.tipbox .correct{
	padding:2px 0 2px 23px;
}
.tipbox .error{	background:url(../images/no.gif)  no-repeat;}
.tipbox .correct{background:url(../images/yes.gif) no-repeat;}

/*注册框 bindwrapper和bindbox是绑定设备页面css， */
.regwrapper,.bindwrapper{
	background:#f0f0f0;
	padding: 1px 50px;
}
.regbox{
	background:#FFF;
	font-size:13px;
	padding: 20px 0 20px 40px;
}
.regbox h2{font-size:18px; font-family:"黑体", "微软雅黑", "宋体";  padding-left:70px; margin-bottom:15px;}

/*注册--表单验证的提示图标*/
.tipbox-reg-error,.tipbox-reg-correct{color:#F00;padding:2px 0 2px 23px; margin-left:5px; }
.tipbox-reg-error{background:url(../images/no.gif)  no-repeat; }
.tipbox-reg-correct{background:url(../images/yes.gif)  no-repeat;}

/*绑定设备界面*/
.bindbox{
	background:#FFF;
	font-size:13px;
	padding: 20px 0 0 40px;
}
.bindbox p
{
	margin-bottom:15px;
}
.bindbox h2{
	font-size: 22px;
	font-family: "微软雅黑", "黑体";
	color: #14b1fc;
	margin-bottom: 20px;
}
.bindbox h3{ font-size:18px;margin-bottom:20px;}
.bindbox h3 span{
	background:url(../images/tip_confirm.gif) no-repeat;
	padding-left:70px;
	margin-left:270px;
	display:inline-block;
	height:60px;
	line-height:60px;
}



/*主页banner1*/
.banner1box{
	position: relative;
	height:500px;
	background:url(../images/ad.png) 0 center no-repeat;
	_background:url(../images/ad-png8.png) 0 center no-repeat;
	width: 990px;
	margin: 0 auto;
}
.banner2box,.banner3box{height:466px;font-family:"微软雅黑", "黑体"; color:#3f3f3f;}
.banner2box{ background:url(../images/banner2.jpg) no-repeat; padding:5px 0 0 457px;}
.banner3box{ background:url(../images/banner3.jpg) no-repeat;}
.banner2box h2{font-size:30px; line-height:60px;}
.banner2box p,.banner3box p{font-size:15px; line-height:28px;}
.banner3box p{ padding:10px 0 0 12px;}

/*legal*/
.legal{ padding:20px 30px 30px 30px;}
.legal p{
	text-align:justify;
	line-height:18px;
	margin:20px 0;
}
.legal h2{
	font-size: 20px;
	color: #14b1fc;
	font-weight: bold;
	font-family: "微软雅黑", "宋体";
	text-align: center;
	margin-bottom: 20px;
}
.legal h3,
.legal h4{
	font-size:16px;
	font-weight:bold;
	margin-bottom:20px;
}

/*下载页面d:download*/
.downwrapper{ background:#b1b1b1; padding:0 50px;}
.d-section{ position:relative;}
.d-section h2{
	color:black;
	font-size:36px;
	font-family:"微软雅黑", "宋体";
	margin-bottom: 10px;
}
.d-section h3{
	font-size:20px;
	font-family:"微软雅黑", "宋体";
	margin-bottom: 5px;
}
.d-section p{
	line-height:22px;
}

.d-section-b1{background:#f2f5f7; height:285px;}
.d-section-b1 .left{position:absolute;top:35px; left:30px; }
.d-section-b1 .middle{
	position:absolute;
	top:28px;
	left:170px;
}
.d-section-b1 .right{position:absolute;top:35px; left:675px;}

.d-section-b2{background:#e8edf1; height:440px;}
