			}
		},
		legend : {
			enabled : false
		},
		tooltip : {
//			pointFormat :text+ '<b>{point.y:.1f} '+unit+'</b>'
			headerFormat: '<span style="font-size:12px">{point.key} </span><table>',
            pointFormat: '<tr><td style="padding:0"><b>{point.y} '+unit+'</b></td></tr>',
            footerFormat: '</table>',
            shared: true,
            useHTML: true
